{
  "name": "claude-hooks",
  "version": "1.0.0",
  "description": "Simple markdown-driven Claude-powered hooks for Claude Code",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "claude-hooks": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "generate": "tsx src/cli.ts generate",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist generated"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.22"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "claude",
    "hooks",
    "code-review",
    "validation"
  ],
  "author": "",
  "license": "MIT"
}
